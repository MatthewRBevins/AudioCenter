                                <input id="clickme" class="show show2 btn btn-primary" onclick="alertModal(1.1*{{fileLength}} + 15); this.onclick=null; showBar(); hideBar(1.1*{{fileLength}} + 15);" type="submit" name="key-change" value="Change" data-bs-toggle="modal" data-bs-target="#exampleModal">
