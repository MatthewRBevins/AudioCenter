{% extends "base.html.j2" %}

{% block head %}
        <title>Log In</title>
{% endblock %}

{% block body %}
    <div class="bg2" id="fadefast">
    <br>
        <div class="fadein smtext" id="plain">
            <br>
            {% if invalid %}
                <div class="error">
                    <p>Oops! Invalid username or password.</p>
                </div>
            {% endif %}
            <h1>Log In</h1>
            <form method="POST" action="login"> 
                Username: <br>
                <input type="text" name="username" value="" required> <br> <br>
                Password: <br> 
                <input type="password" name="paswd" value="" required> <br> <br>
                <input type="submit" value="Log In">
            </form>
            <br> 
            <br>
            <a href="{{url_for('signup')}}" class="text-info">Don't have an account? Click here</a>
        </div>
    </div>
{% endblock %}