{% extends "base.html.j2" %}

{% block head %}
        <title>{{user}}</title>
{% endblock %}

{% block body %}
<div class="bg2">
    <br>
    <div>
    <div class="container">
        <label for="file-input">
            <img class="rounded mx-auto" height="200" src="static/images/pfps/{{userToShowData.username}}/pfp.png">
        </label>
        <input id="file-input" type="file" style="display:none"/><br><br>
        <div class="textedit" id="usernamecontainer">
            <h1 class="text" id="username">@{{userToShowData.username}}</h1>
            <form class="form" method="POST">
                <input type="hidden" name="formnum" value="1">
                <input class="form-control editor" name="username"></textarea>
                <button class="btn btn-primary">Save</button>
            </form>
        </div>
        <div class="textedit" id="biocontainer">
            <p class="text" id="bio">Hello, I'm Matthew.</p>
            <form class="form" method="POST">
                <input type="hidden" name="formnum" value="2">
                <textarea class="form-control editor" name="bio"></textarea>
                <button class="btn btn-primary">Save</button>
            </form>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Edit User Info</h5>
                        </div>
                        <div class="modal-body">
                            <form method="POST">
                                <input type="hidden" name="formnum" value="3">
                                <label><i class="fa-solid fa-location-dot ibr"></i></label><input type="text" name="place" id="placeinput" placeholder="Enter location..."><br><br>
                                <label><i class="fa-solid fa-link ibr"></i></label><input type="url" name="website" id="websiteinput" placeholder="Enter website link..."><br><br>
                                <input type="submit" class="btn btn-primary" value="Update">
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                        </div>
                    </div>
                    </div>
        <h5><i class="fa-solid fa-location-dot ibr"></i><span id="placetext">United States</span><i class="fa-solid fa-link ibr"></i><a target="_blank" href="https://matthewrbevins.com"><span id="websitetext">matthewrbevins.com</span></a><i class="fa-solid fa-calendar ibr"></i>March 2023<i class="fa-solid fa-pen-to-square ibr iho" data-bs-toggle="modal" data-bs-target="#exampleModal"></i></h5>
        <h5 class="text-light"><span class="spanbr">1K Followers<i class="text-warning fa-solid fa-medal"></i></span><span class="spanbr">1 Following</span></h5>
        <h1>{{userToShowData.username}}'s Audio:</h1>
    </div>
</div>
<script>
    $('#placeinput').val($('#placetext').html())
    $('#websiteinput').val($('#websitetext').html())

    $('.textedit .text').on('dblclick', e => {
        e.preventDefault()
        $('.form').hide()
        $('.text').show()
        $(`#${e.target.id}`).hide()
        $(`#${e.target.id}container .editor`).html($(`#${e.target.id}`).html().replace("@",""))
        $(`#${e.target.id}container .editor`).val($(`#${e.target.id}`).html().replace("@",""))
        $(`#${e.target.id}container .form`).show()
    })
    $(document).keyup(function(e) {
        if (e.key === "Escape") { // escape key maps to keycode `27`
            // <DO YOUR WORK HERE>
            $('.form').hide()
            $('.text').show()
        }
    });
</script>
{% endblock %}